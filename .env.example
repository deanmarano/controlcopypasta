# Environment variables for ControlCopyPasta
# Copy this file to .env and fill in the values

# Database
POSTGRES_USER=controlcopypasta
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=controlcopypasta_prod

# Phoenix/Backend
SECRET_KEY_BASE=generate_with_mix_phx_gen_secret
GUARDIAN_SECRET_KEY=generate_with_mix_phx_gen_secret
PHX_HOST=your-domain.com

# Admin access (comma-separated email addresses)
ADMIN_EMAILS=admin@example.com

# Frontend
FRONTEND_URL=https://your-domain.com
VITE_API_URL=https://your-domain.com/api

# Email (optional - for magic link auth)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# WebAuthn/Passkey (optional - defaults to localhost:5173)
WEBAUTHN_ORIGIN=http://localhost:5173
WEBAUTHN_RP_ID=localhost

# Generate secrets with:
# mix phx.gen.secret

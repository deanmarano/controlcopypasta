{
  "manifest_version": 2,
  "name": "ControlCopyPasta",
  "version": "1.0.0",
  "description": "Save recipes from any website to your ControlCopyPasta instance",
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["background/background.js"]
  },
  "options_ui": {
    "page": "popup/options.html",
    "open_in_tab": false,
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "controlcopypasta@example.com",
      "strict_min_version": "57.0"
    }
  }
}
